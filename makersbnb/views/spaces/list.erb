<div class="grid-container">
  <div class="header">
    <h1>Spaces</h1>
  </div>
  <div class="navbar">
    <ul>
      <li><a href="/spaces/list">Spaces</a></li>
      <li><a href="/spaces/yours">My spaces</a></li>
      <li><a href="/booking/yours">My bookings</a></li>
      <li><a href="/logout">Log out</a></li>
    </ul>
  </div>
  <div class="middle">
    <h2>Welcome <%= @user_email %></h2>
    <ul>
      <% @spaces.each do |space| %>
        <div>
          <p>Title: <%=space.title%> </p>
          <p>Description: <%=space.description%> </p>
          <p>Price per night: <%=space.price_per_night%> </p>
          <form action="/spaces/details" method="get">
            <input type ="hidden" name ="space_id" value=<%=space.id%>>
            <input type="submit" value="More Details">
          </form>
        </div>
      <% end %>
    </ul>
  </div>
  <div class="footer">
  <a href="/logout">Log out</a>
  <a href="/spaces/yours">Your Listed Spaces</a>
  </div>
</div>
